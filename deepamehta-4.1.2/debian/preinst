#!/bin/sh
# preinst script for deepamehta
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

BACKUPDATE=$( date +%F-%H:%M:%S )
DMVERSION=4.1.2

if [ -f /var/run/deepamehta/deepamehta.pid ]; then
    /etc/init.d/deepamehta stop
fi

case "$1" in
    install)
    adduser --system --home /var/lib/deepamehta --group --disabled-password --disabled-login --gecos DeepaMehta deepamehta
    if [ -d /var/lib/deepamehta/deepamehta-db ]; then
	    if [ ! -f
		    /var/lib/deepamehta/deepamehta-db/.db-updated.$DMVERSION ]; then
		    mv /var/lib/deepamehta/deepamehta-db /var/lib/deepamehta/deepamehta-db-$DMVERSION-backup-$BACKUPDATE
		    mkdir /var/lib/deepamehta/deepamehta-db
		    chown deepamehta:deepamehta /var/lib/deepamehta/deepamehta-db
		    touch /var/lib/deepamehta/deepamehta-db/.db-updated.$DMVERSION
		    echo "Your existing database has been moved to /var/lib/deepamehta/deepamehta-db-$DMVERSION-backup-$BACKUPDATE."
	    fi
    else
	    mkdir /var/lib/deepamehta/deepamehta-db
	    chown deepamehta:deepamehta /var/lib/deepamehta/deepamehta-db
	    touch /var/lib/deepamehta/deepamehta-db/.db-updated.$DMVERSION
    fi
    if [ -d /var/cache/deepamehta/bundle-cache ]; then
	    rm -rf /var/cache/deepamehta/bundle-cache
    fi
    ;;

    upgrade)
    # existing DB is < DM 4.1
    if [ -d /var/lib/deepamehta/deepamehta-db ] && [ ! -f /var/lib/deepamehta/deepamehta-db/.db-updated.$DMVERSION ] && [ -f /var/lib/deepamehta/deepamehta-db/.db-updated.4.0* ]; then
	    mv /var/lib/deepamehta/deepamehta-db /var/lib/deepamehta/deepamehta-db-$DMVERSION-backup-$BACKUPDATE
	    mkdir /var/lib/deepamehta/deepamehta-db
	    chown deepamehta:deepamehta /var/lib/deepamehta/deepamehta-db
	    touch /var/lib/deepamehta/deepamehta-db/.db-updated.$DMVERSION
	    echo "Your existing database has been moved to /var/lib/deepamehta/deepamehta-db-$DMVERSION-backup-$BACKUPDATE."
    # existing DB is >= DM 4.1
    elif [ -d /var/lib/deepamehta/deepamehta-db ] && [ -f /var/lib/deepamehta/deepamehta-db/.db-updated.4.1* ] && [ ! -f /var/lib/deepamehta/deepamehta-db/.db-updated.$DMVERSION ]; then
        cp /var/lib/deepamehta/deepamehta-db /var/lib/deepamehta/deepamehta-db-$DMVERSION-backup-$BACKUPDATE
        touch /var/lib/deepamehta/deepamehta-db/.db-updated.$DMVERSION
	echo "Your existing database has been copied to /var/lib/deepamehta/deepamehta-db-$DMVERSION-backup-$BACKUPDATE."
    fi
    if [ -d /var/cache/deepamehta/bundle-cache ]; then
	    rm -rf /var/cache/deepamehta/bundle-cache
    fi
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
